# ============================================
# HL LIQ HUNTER - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# TELEGRAM BOT (Opsiyonel)
# ============================================
# 1. @BotFather'a git, /newbot yaz, bot oluştur
# 2. Token'ı al ve buraya yapıştır
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Channel ID: 
# - Public channel için: @channel_name
# - Private channel için: -100xxxxxxxxx (bot'u admin yap önce)
# Channel ID bulmak için: https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_CHANNEL_ID=@your_channel_name

# ============================================
# TWITTER/X API (Opsiyonel)
# ============================================
# 1. https://developer.twitter.com adresine git
# 2. Developer account oluştur (ücretsiz)
# 3. App oluştur → Keys and tokens → Generate
# 4. "Read and Write" permission ver

TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_token_secret

# ============================================
# COINGLASS API (Opsiyonel - $50/ay)
# ============================================
# Daha fazla whale adresi için
# https://www.coinglass.com/pricing
COINGLASS_API_KEY=your_coinglass_api_key

# ============================================
# SERVER CONFIG
# ============================================
PORT=3000
